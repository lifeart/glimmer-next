{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,

    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/tests/*": ["./src/tests/*"],
      "@/core/*": ["./src/core/*"],
      "@/services/*": ["./src/services/*"],
      "@lifeart/gxt/test-utils": ["./src/tests/utils"],
      "@lifeart/gxt/ember-inspector": ["./src/core/inspector/ember-inspector"],
      "@lifeart/gxt/glimmer-compatibility": ["./src/core/glimmer/glimmer-compat"],
      "@lifeart/gxt": ["./src/core/index"]
    },
    "types": ["vite/client", "./types"]
  },
  "include": ["src", "plugins"],
  "glint": {
    "environment": {
      "gxt": {
        "additionalGlobals": []
      }
    }
  }
}
